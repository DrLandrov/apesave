{% extends "master.html.twig" %}



{% block content %}
    {% if sessionUser %}
        <a href="/sell">Sell</a>
{% if myItemsForSale %}
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Price</th>
            <th>Name</th>
            <th>Operations</th>
        </tr>
            {% for ad in myItemsForSale %}
            <tr>
                <td>{{ad.ID}}</td>
                <td>{{ad.pName}}</td>
                <td>{{ad.image}}</td>
                <td>{{ad.pPrice}}</td> 
                <td><a href='/sell/{{ad.ID}}'>Edit Ad</a></td>
                
            </tr>
            {% endfor %}
    </table>
    {% else %}
        <p>YOU DONT HAVE ANYTHING FOR SALE</p>   
{% endif %}
    {% else %}
        <p>Please login to access My Account</p>
        <a href="/login">Login</a>
    {% endif %}


{% endblock %}{# empty Twig template #}
